                    app:layout_constraintTop_toTopOf="@id/icon_two"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/plant_type2"/>

                <com.google.android.material.card.MaterialCardView
