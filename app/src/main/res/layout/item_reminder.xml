<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tanggal pengingat -->
        <TextView
            android:id="@+id/text_reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 November 2024"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Aktivitas dan tanaman -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Ikon aktivitas -->
            <ImageView
                android:id="@+id/icon_reminder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_watering"
                android:contentDescription="@string/reminder_icon" />

            <!-- Informasi aktivitas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/text_activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siram tanaman"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_plant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jeruk - Setiap Minggu"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_more_options"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more"
                android:contentDescription="@string/more_options"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
